<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="250.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sparkcleancebu.zk9500_tray_app.controllers.SetupTokenController">
   <children>
      <Label text="Enter Setup Token">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <StackPane VBox.vgrow="ALWAYS">
         <children>
            <TextArea fx:id="tokenTextArea" onDragDetected="#handleTokenTextAreaInput" prefHeight="108.0" prefWidth="360.0" promptText="Paste the setup token here..." wrapText="true" />
         </children>
      </StackPane>
      <HBox alignment="CENTER_RIGHT" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClearButtonClick" text="Reset" />
            <Button fx:id="proceedButton" mnemonicParsing="false" onAction="#handleProceedButtonClick" text="Proceed" />
         </children>
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
